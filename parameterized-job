currentBuild.displayName="${currentBuild.projectName}-#${currentBuild.number}"
pipeline{
    agent any
	parameters {
  choice choices: ['dev', 'release', 'prod'], description: 'display the app  env to deploy', name: 'deployEnv'
  choice choices: ['develop', 'release', 'master'], description: 'choose the branch to display', name: 'branchName'
}
	stages{
        stage (" maven package")
        {
        steps{
		  sh "git checkout ${params.branchName}"
          echo " we build the ${params.branchName} branch"
        }
        }
        stage ("Tomact deploy")
        {
        steps{
         
          // copy citi bank war file to tomcat server
		   echo " we are deploying to ${params.deployEnv} enviroment"
         }
        }
	  }
	  }